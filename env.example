# Environment Configuration for ChatGPT Clone
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CLERK AUTHENTICATION (Required)
# =============================================================================
# Get these from https://clerk.com/ -> Dashboard -> API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# =============================================================================
# DATABASE (Required)
# =============================================================================
# MongoDB connection string
# Get from https://www.mongodb.com/atlas or use local: mongodb://localhost:27017/chatgpt-clone
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatgpt-clone

# =============================================================================
# AI PROVIDER (Required)
# =============================================================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Groq API Key - Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# =============================================================================
# FILE STORAGE (Choose one)
# =============================================================================
# Cloudinary (Recommended) - Get from https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Uploadcare (Alternative) - Get from https://uploadcare.com/
# UPLOADCARE_PUBLIC_KEY=your_uploadcare_public_key
# UPLOADCARE_SECRET_KEY=your_uploadcare_secret_key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Default storage provider (cloudinary | uploadcare)
DEFAULT_STORAGE_PROVIDER=cloudinary

# Feature flags
ENABLE_FILE_UPLOADS=true
MAX_FILE_SIZE=10485760

# Development settings
DEBUG_MODE=true
DISABLE_AUTH_IN_DEV=false

# Clerk Development Settings
CLERK_SKIP_CAPTCHA_IN_DEV=true
